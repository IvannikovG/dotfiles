# vim: filetype=sh
# Script executed by interactive non-login shels.

# DOTFILES variable consist path to dotfile repo directory. It's should be setted with ansible.
export DOTFILES=~/.dotfiles

# Load the shell dotfiles, and then some:
# * ~/.path can be used to extend `$PATH`.
# * ~/.extra can be used for other settings you donâ€™t want to commit.
for file in $DOTFILES/source/{path,bash_prompt,exports,aliases,functions,extra}; do
	[ -r "$file" ] && [ -f "$file" ] && source "$file";
done;
unset file;
